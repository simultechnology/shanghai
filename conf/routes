# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Welcome.index()
GET     /sample                             controllers.Application.index()
GET     /top                                controllers.Uranai.showTop()
POST    /name                               controllers.Uranai.showNameResult()
GET     /type/:id                           controllers.Uranai.showType(id :Integer)
GET     /questions                          controllers.Questions.index()
GET     /questions/file                     controllers.Questions.file()
POST    /questions/upload                   controllers.Questions.upload()
POST    /questions/insert                   controllers.Questions.insert()
GET     /questions/list/:room_number        controllers.Questions.list(room_number :Integer)
GET     /rooms/setup                        controllers.Rooms.setup()
GET     /rooms/check                        controllers.Rooms.check()
GET     /schools                            controllers.Schools.index()
GET     /schools/entry                      controllers.Schools.entry()
POST    /schools/master                     controllers.Schools.master()
GET     /schools/list/:name                 controllers.Schools.list(name :String)
GET     /schools/list/                      controllers.Schools.all()
POST    /schools/register                   controllers.Schools.register()
GET     /entries                            controllers.Entries.index()
POST    /entries/add                        controllers.Entries.add()
GET     /results/test                       controllers.Results.test()
GET     /results/complete                   controllers.Results.complete()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
