# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Welcome.index()
GET     /sample                     controllers.Application.index()
GET     /top                        controllers.Uranai.showTop()
POST    /name                       controllers.Uranai.showNameResult()
GET     /type/:id                   controllers.Uranai.showType(id :Integer)
GET     /questions                  controllers.Questions.index()
GET     /questions/file             controllers.Questions.file()
POST    /questions/upload           controllers.Questions.upload()
POST    /questions/insert           controllers.Questions.insert()
GET     /questions/list             controllers.Questions.list()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
